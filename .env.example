# ============================================
# Category Service Configuration
# ============================================
# Copy this file to .env and update with your values
# All values are optional and have sensible defaults

# ============================================
# Server Configuration
# ============================================
# Server port (default: 3004)
PORT=3004
# Alternative: SERVER_PORT=3004

# Server host (default: localhost)
HOST=localhost
# Alternative: SERVER_HOST=localhost

# Server protocol: http or https (default: http in development, https in production)
SERVER_PROTOCOL=http

# Server base path (optional, e.g., /api)
SERVER_PATH=

# Node environment: development, production, test
NODE_ENV=development

# ============================================
# Frontend/CORS Configuration
# ============================================
# Full frontend URL (preferred method)
FRONTEND_URL=http://localhost:3000

# OR configure frontend components individually:
# FRONTEND_HOST=localhost
# FRONTEND_PORT=3000
# FRONTEND_PROTOCOL=http
# FRONTEND_PATH=

# CORS credentials (default: true)
# CORS_CREDENTIALS=true

# ============================================
# Database Configuration
# ============================================
# Option 1: Use full DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/category_service

# Option 2: Use individual components (if DATABASE_URL is not set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=category_service

# Database SSL configuration
# DB_SSL=false
# DB_SSL_REJECT_UNAUTHORIZED=false

# Database connection pool settings
# DB_POOL_MAX=20
# DB_IDLE_TIMEOUT_MS=30000
# DB_CONNECTION_TIMEOUT_MS=2000

# ============================================
# External Services Configuration
# ============================================
# User Service URL (preferred method)
USER_SERVICE_URL=http://localhost:3001

# OR configure user service components individually:
# USER_SERVICE_HOST=localhost
# USER_SERVICE_PORT=3001
# USER_SERVICE_PROTOCOL=http
# USER_SERVICE_PATH=

# Common service host (used as fallback for all services)
# SERVICES_HOST=localhost

# Common service protocol (used as fallback for all services)
# SERVICES_PROTOCOL=http

# ============================================
# File Paths Configuration
# ============================================
# Database schema file path (relative to migrations directory or absolute)
SCHEMA_PATH=../../../../database/schemas/category-service.sql
# Alternative: DATABASE_SCHEMA_PATH=../../../../database/schemas/category-service.sql

# Migrations directory path
# MIGRATIONS_PATH=../../../../database/migrations

# ============================================
# Rate Limiting Configuration
# ============================================
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
# RATE_LIMIT_MAX=100

# Rate limit error message
# RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# ============================================
# Body Parser Configuration
# ============================================
# JSON body size limit (default: 10mb)
# BODY_JSON_LIMIT=10mb

# URL encoded extended mode (default: true)
# BODY_URLENCODED_EXTENDED=true

# ============================================
# Application Defaults
# ============================================
# Default limit for popular tags (default: 20)
# DEFAULT_POPULAR_TAGS_LIMIT=20
